---
layout: base.njk
title: Bookshelf
---
<div class="page-content">

  {# 1. Currently Reading Section #}
  <div class="bookshelf-container">
    <h2 class="bookshelf-header">[ currently reading ]</h2>
    <br>
    {% for book in collections.bookshelf %}
      {% if book.data.status == "currently-reading" %}
        <div class="currently-reading-box">
          {# Title uses verified project-title class but without the blue link style #}
          <span class="project-title" style="color: #000; text-decoration: none; border: none; cursor: default;">
            {{ book.data.title }}
          </span>
          <span class="book-author">By {{ book.data.author }}</span>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {# 2. The Side-by-Side Grid #}
  <div class="lab-grid">
    
    {# LEFT COLUMN: reviews #}
    <div class="project-entry">
      <h2 class="bookshelf-header" style="border-bottom: 1px solid #000; padding-bottom: 5px; width: 100%;">
        reviews
      </h2>
      {% for book in collections.bookshelf %}
        {% if book.data.status == "read" %}
          <div style="margin-bottom: 25px;">
            <a href="{{ book.url }}" class="project-title">{{ book.data.title }}</a>
            <span class="book-author">By {{ book.data.author }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {# RIGHT COLUMN: reading list #}
    <div class="project-entry">
      <h2 class="bookshelf-header" style="border-bottom: 1px solid #000; padding-bottom: 5px; width: 100%;">
        reading list
      </h2>
      {% for book in collections.bookshelf %}
        {% if book.data.status == "want-to-read" %}
          <div style="margin-bottom: 25px;">
            <span class="project-title" style="color: #000; text-decoration: none; cursor: default;">
              {{ book.data.title }}
            </span>
            <span class="book-author">By {{ book.data.author }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</div>