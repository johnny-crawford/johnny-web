#---
layout: base.njk
title: Bookshelf
---
<div class="page-content" style="text-align: center;">

  {# 1. Currently Reading #}
  <div class="active-reading-box">
    <h2 class="bookshelf-section-header" style="border: none; margin-bottom: 10px;">[ CURRENTLY_READING ]</h2>
    {% for book in collections.bookshelf %}
      {% if book.data.status == "currently-reading" %}
        <div>
          <span class="project-title" style="text-decoration: none; cursor: default;">{{ book.data.title }}</span>
          <span class="item-metadata" style="margin-top: 5px;">By {{ book.data.author }}</span>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {# 2. The Two-Column Grid (Reusing your perfect Lab Grid) #}
  <div class="lab-grid">
    
    {# LEFT COLUMN: Reviews #}
    <div class="project-entry">
      <h2 class="bookshelf-section-header">REVIEWS</h2>
      {% for book in collections.bookshelf %}
        {% if book.data.status == "read" %}
          <div style="margin-bottom: 30px;">
            <a href="{{ book.url }}" class="project-title">{{ book.data.title }}</a>
            <span class="item-metadata">By {{ book.data.author }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {# RIGHT COLUMN: Reading List #}
    <div class="project-entry">
      <h2 class="bookshelf-section-header">READING_LIST</h2>
      {% for book in collections.bookshelf %}
        {% if book.data.status == "want-to-read" %}
          <div style="margin-bottom: 30px;">
            {# Coherence: Same class as Lab titles, but black since it's not a link #}
            <span class="project-title" style="color: #000; text-decoration: none; cursor: default;">
              {{ book.data.title }}
            </span>
            <span class="item-metadata">By {{ book.data.author }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</div>